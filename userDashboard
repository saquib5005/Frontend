          <div *ngIf="currentStep === 4" formGroupName="policy">
            <div class="field" style="margin-bottom: 1.5rem;">
              <label>Select Plan</label>
              <p-dropdown formControlName="selectedPlan" [options]="availablePlans" optionLabel="planName" placeholder="Choose a Plan" (onChange)="onPlanSelect($event)"></p-dropdown>
